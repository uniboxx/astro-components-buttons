<article><slot /></article>

<style>
  article {
    --primary-color: #232323;
    --secondary-color: #9bdc22;
    --shoes-color2: #03a9f4;
    --shoes-color3: #e91e63;
    --duration: 0.5s;

    position: relative;
    cursor: pointer;
    border-radius: 20px;
    background-color: var(--primary-color);
    height: 450px;
    overflow: hidden;

    &::before,
    &::after {
      position: absolute;
    }

    /* circle */
    &::before {
      top: 0;
      left: 0;
      clip-path: circle(150px at 80% 20%);
      transition: var(--duration) ease-in-out;
      background-color: var(--secondary-color);
      width: 100%;
      height: 100%;
      content: '';
    }
    &::after {
      top: 30%;
      left: -20%;
      content: 'card09';
      color: #ffffff05;
      font-style: italic;
      font-weight: 800;
      font-size: 12rem;
    }

    figure {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      transition: var(--duration);
      padding: 40px 0;
      width: 100%;

      img {
        position: relative;
        transform: rotate(-25deg);
        margin: 0 auto;
        width: 70%;
        height: 100%;
      }
    }

    .content {
      position: absolute;
      bottom: 0;
      z-index: 5;
      transition: 1s;
      width: 100%;
      height: 100px;
      color: #fafafa;
      text-align: center;

      h3 {
        position: relative;
        font-weight: 600;
        letter-spacing: 1px;
      }
      & > div {
        display: flex;
        justify-content: center;
        align-items: center;
        opacity: 0;
        transition: var(--duration);
        padding: 8px 20px;
        h4 {
          margin-right: 10px;
          font-weight: 300;
          font-size: 0.8rem;
          letter-spacing: 2px;
          text-transform: uppercase;
        }
      }
      .size span,
      .color span {
        cursor: pointer;
        margin: 0 5px;
      }
      .size span {
        transition: var(--duration);
        border-radius: 4px;
        background-color: white;
        width: 1.5rem;
        height: 1.5rem;
        color: #111;
        font-size: 0.8rem;
        line-height: 1.4rem;
      }
      .color span {
        border-radius: 50%;
        width: 1rem;
        height: 1rem;
        &:nth-of-type(1) {
          background-color: var(--secondary-color);
        }
        &:nth-of-type(2) {
          background-color: var(--shoes-color2);
        }
        &:nth-of-type(3) {
          background-color: var(--shoes-color3);
        }
      }

      a {
        position: relative;
        transform: translateY(50px);
        opacity: 0;
        transition: var(--duration);
        margin-top: 0.5rem;
        border-radius: 4px;
        background-color: #fafafa;
        padding: 10px 30px;
        color: #111;
        font-weight: 600;
      }
    }

    &:hover {
      &::before {
        clip-path: circle(300px at 80% -20%);
      }
      figure {
        top: 0;
        transform: translateY(0);
      }
      .content {
        height: 210px;
        & > div {
          opacity: 1;
        }
        .size {
          transition-delay: var(--duration);
        }
        .color {
          transition-delay: calc(var(--duration) * 1.2);
        }
        a {
          transform: translateY(0);
          opacity: 1;
          transition-delay: calc(var(--duration) * 1.25);
        }
      }
    }
    .size span:hover {
      background-color: var(--secondary-color);
    }
  }
</style>
