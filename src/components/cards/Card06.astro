<article><slot /></article>

<style>
  article {
    --primary-color: #262626;
    --secondary-color: #fafafa;
    --duration: 0.5s;
    --figure-offset: 10px;

    position: relative;
    cursor: pointer;
    box-shadow: 0 2px 10px #00000033;
    background-color: var(--secondary-color);
    height: 400px;

    &,
    &::before,
    &::after {
      border-radius: 4px;
    }

    &::before,
    &::after {
      position: absolute;
      top: 0;
      left: 0;
      z-index: -1;
      transition: var(--duration);
      background-color: var(--secondary-color);
      width: 100%;
      height: 100%;
      content: '';
    }

    figure {
      position: absolute;
      top: var(--figure-offset);
      right: var(--figure-offset);
      bottom: var(--figure-offset);
      left: var(--figure-offset);
      z-index: 1;
      transition: var(--duration);
      background-color: var(--tertiary-color);
      padding: 10px;
      width: calc(100% - calc(var(--figure-offset) * 2));

      img {
        position: absolute;
        top: 0;
        left: 0;
        transition: var(--duration);
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }
    .details {
      position: absolute;
      bottom: 10px;
      width: 100%;
      height: 60px;
      color: var(--primary-color);
      font-size: 1.5rem;
      text-align: center;
      h3 {
        color: #777;
        font-weight: 600;
        font-size: 1rem;
        text-transform: uppercase;
        span {
          color: #f38695;
          font-weight: 500;
          font-size: 0.9rem;
        }
      }
    }

    &:hover {
      &::before,
      &::after {
        box-shadow: 0 2px 20px #00000033;
      }
      &::before {
        transform: rotate(20deg);
      }
      &::after {
        transform: rotate(10deg);
      }
      figure {
        bottom: 80px;
      }
    }
  }
</style>
