<article><slot /></article>

<style>
  article {
    --primary-color: #262626;
    --secondary-color: #fafafa;
    --duration: 0.5s;

    position: relative;
    cursor: pointer;
    box-shadow: 0 30px 30px #00000088;
    background-color: var(--primary-color);

    figure {
      transition: var(--duration);
      width: 100%;
      height: 100%;

      img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    }

    .content {
      --width: 80%;
      --height: 80px;
      display: flex;
      position: absolute;
      bottom: 0;
      left: calc((100% - var(--width)) / 2);
      flex-direction: column;
      z-index: 1;
      transition: var(--duration);
      background-color: var(--secondary-color);
      width: var(--width);
      height: var(--height);
      overflow: hidden;
      text-align: center;
      h3 {
        margin-bottom: 1rem;
        height: var(--height);
        font-size: 1.5rem;
        line-height: var(--height);
        text-transform: uppercase;
      }
      h3,
      p {
        margin: 0 auto 2rem;
        width: 80%;
      }
      p,
      a {
        opacity: 0;
        transition: var(--duration);
      }
      a {
        align-self: center;
        margin: auto 0 1rem;
        background-color: var(--primary-color);
        padding: 10px 15px;
        color: #fafafa;
      }
    }

    &:hover {
      figure {
        opacity: 0;
      }
      .content {
        left: 0;
        width: 100%;
        height: 100%;
        p,
        a {
          opacity: 1;
          transition-delay: var(--duration);
        }
      }
    }
  }
</style>
