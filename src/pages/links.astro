---
import BaseLayout from '@/layouts/BaseLayout.astro';
// prettier-ignore
import { Link01, Link02, Link03, Link04, Link05, Link06 } from '@/components';
---

<BaseLayout title="Astro Links">
  <h2>Hover over the link item</h2>
  <div class="grid">
    <Link01>🏠️ Link01</Link01>
    <Link02>🏠️ Link02</Link02>
    <Link03>🏠️ Link03</Link03>
    <Link04>🏠️ Link04</Link04>
    <Link05>🏠️ Link05</Link05>
    <Link06>🏠️ Link06</Link06>
  </div>
</BaseLayout>

<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(140px, 1fr));
    gap: 10px;
    margin-bottom: 20rem;
    padding: 10px;
  }
</style>
