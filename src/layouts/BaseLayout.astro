---
import '@/styles/global.css';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <!-- show the version of Astro used -->
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <header>
      <h1>CSS EFFECTS</h1>
      <nav>
        <a href="/" class:list={[{ active: Astro.url.pathname === '/' }]}
          >Buttons</a
        >
        <a
          href="/images"
          class:list={[{ active: Astro.url.pathname.startsWith('/images') }]}
          >Images</a
        >
      </nav>
    </header>
    <main>
      <slot />
    </main>
  </body>
</html>

<style>
  body {
    background-color: #999;
  }
  header {
    h1 {
      color: #fff;
      font-size: 2rem;
      text-align: center;
      text-transform: uppercase;
    }
    nav {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      align-items: center;
      gap: 20px;
      padding: 0.5rem 10px;
      font-size: 1.2rem;
      a {
        display: block;
        padding: 0.5rem 0;
        color: #ededed;
        text-align: center;
        text-decoration: none;
        &.active {
          color: #fff;
          font-weight: bold;
          text-decoration: underline 3px;
          text-underline-offset: 0.5rem;
        }
      }
    }
  }
</style>
